#include<iostream>

using namespace std;

int main(){
    int row,x,b=0;
    cout<<"enter the no of rows want"<<endl;
    cin>>row;
    x=row;
    for(int i=1;i<=row;i++){
        //for (int p=1;p<i;p++){
         //  cout<<" ";
           
     //}
        for   ( int j=0;j<i;j++){
            b=b+1;
            cout<<b<<" ";
        }
        cout<<endl;
    }

    return 0;
}
