#include<iostream>

using namespace std;

int main(){
    int a,num,check=0;
    cout<<"enter the number to check whether the number is palindrome";
    cin>>num;
    for(a=num;a>0;a=a/10)
    {
        check=(check*10)+a%10;
    }
    if(num==check)
    cout<<"the number is the palindrome";
    else
    cout<<"the number is not palindrome ";

    return 0;
}
