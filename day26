#include<iostream>

using namespace std;

int main(){
    int row,x,b=0;
    cout<<"enter the no of rows want"<<endl;
    cin>>row;
    x=row;
    for(int i=1;i<=row;i++){
        for (int p=x-i;p>0;p--){
          cout<<" ";
           
     }
        for   ( int j=0;j<i;j++){
            
            cout<<i+j;
        }
        cout<<endl;
    }

    return 0;
}
